<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/visitor_navigation"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/photoIdFragment"
        android:name="com.abstractclass.visitormanager.views.fragments.PhotoIdFragment"
        android:label="PhotoIdFragment" >
        <action
            android:id="@+id/action_photoIdFragment_to_idDecodeInfoFragment"
            app:destination="@id/idDecodeInfoFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/idDecodeInfoFragment"
        android:name="com.abstractclass.visitormanager.views.fragments.IdDecodeInfoFragment"
        android:label="fragment_id_decode_info"
        tools:layout="@layout/fragment_id_decode_info" >
        <argument
            android:name="person"
            app:argType="com.abstractclass.visitormanager.models.Person" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.abstractclass.visitormanager.views.fragments.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_scan_id"
            app:destination="@id/photoIdFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_signin"
            app:destination="@id/signInFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_signout"
            app:destination="@id/signOutFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.abstractclass.visitormanager.views.fragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_photo_id"
            app:destination="@id/idDecodeInfoFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/signOutFragment"
        android:name="com.abstractclass.visitormanager.views.fragments.SignOutFragment"
        android:label="fragment_sign_out"
        tools:layout="@layout/fragment_sign_out" />
    <fragment
        android:id="@+id/reportsFragment"
        android:name="com.abstractclass.visitormanager.views.fragments.ReportsFragment"
        android:label="fragment_reports"
        tools:layout="@layout/fragment_reports" />
    <action
        android:id="@+id/action_reports"
        app:destination="@id/reportsFragment"
        app:popEnterAnim="@anim/fragment_open_enter"
        app:popExitAnim="@anim/fragment_close_exit" />
    <action
        android:id="@+id/actionWelcome"
        app:destination="@id/welcomeFragment"
        app:launchSingleTop="true" />
</navigation>